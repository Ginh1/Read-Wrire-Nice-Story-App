<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prevblack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa truyện"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD0D0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anh1" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa bìa truyện"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD0D0"
        android:layout_marginTop="15dp"
        />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Tiêu đề"
       android:textStyle="bold"
       android:textSize="32sp"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cậu bé phi hành gia"
        android:textSize="24sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="32sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Có một ngày nọ gì đó"
        android:textSize="24sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD0D0"
        android:layout_marginTop="15dp"
        />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:src="@drawable/addchapter"
    android:layout_gravity="center"
    android:layout_marginTop="15dp"
    />
</LinearLayout>